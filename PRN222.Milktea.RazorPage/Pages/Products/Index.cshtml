@page
@model PRN222.Milktea.RazorPage.Pages.Products.ProductsIndexModel

<h2 class="mb-4">Products</h2>

<div class="row">
    @foreach (var product in Model.Products)
    {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="row g-0"> <!-- Sử dụng row để chia layout -->
                        <div class="col-md-8"> <!-- Phần thông tin sản phẩm -->
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text"><strong>Category:</strong> @product.CategoryName</p> 
                                <p class="card-text"><strong>Price:</strong> @product.Price.ToString("C")</p>
                                <a asp-page="Details" asp-route-id="@product.ProductId" class="btn btn-primary">Details</a>
                                <form method="post" asp-page-handler="AddToCart" class="mt-2">
                                    <input type="hidden" name="productId" value="@product.ProductId" />
                                    <button type="submit" class="btn btn-success">Add to Cart</button>
                                </form>
                            </div>
                        </div>
                            <div class="col-md-4 d-flex align-items-center"> <!-- Phần hình ảnh sản phẩm -->
                            <img src="@product.Image" class="img-fluid rounded-end" alt="@product.Name" /> <!-- Hình ảnh sản phẩm -->
                        </div>
                    </div>
                </div>
            </div>
    }
</div>
