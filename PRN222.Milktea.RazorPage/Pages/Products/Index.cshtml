@page
@model PRN222.Milktea.RazorPage.Pages.Products.ProductsIndexModel

@{
    ViewData["Title"] = "Products";
}

<style>
    body {
        background: url('/css/img/ClientBackGround.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

    .product-image {
        border-radius: 10px;
        overflow: hidden;
        height: 200px;
        object-fit: cover;
        width: 100%;
    }

    .product-title {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .card-body {
        padding: 20px;
    }

    .btn-success, .btn-primary {
        width: 100%;
        margin-top: 10px;
        padding: 10px;
    }

    .product-details {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

    .product-price {
        color: #ff5733;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .product-category {
        font-size: 1rem;
        color: #777;
    }
</style>

<h2 class="mb-4 text-center text-white">Products</h2>

<div class="container">
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4 mb-4">
                <div class="card product-card">
                    <div class="row g-0">
                        <!-- Phần thông tin sản phẩm -->
                        <div class="col-md-8">
                            <div class="card-body product-details">
                                <h5 class="card-title product-title">@product.Name</h5>
                                <p class="product-category"><strong>Category:</strong> @product.CategoryName</p>
                                <p class="product-price">@product.Price.ToString("C")</p>
                                <a asp-page="Details" asp-route-id="@product.ProductId" class="btn btn-primary">Details</a>
                                <form method="post" asp-page-handler="AddToCart" class="mt-2">
                                    <input type="hidden" name="productId" value="@product.ProductId" />
                                    <button type="submit" class="btn btn-success">Add to Cart</button>
                                </form>
                            </div>
                        </div>

                        <!-- Phần hình ảnh sản phẩm -->
                        <div class="col-md-4 d-flex align-items-center">
                            <img src="@product.Image" class="product-image" alt="@product.Name" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
