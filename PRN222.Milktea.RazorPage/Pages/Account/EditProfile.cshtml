@page
@model PRN222.Milktea.RazorPage.Pages.Account.EditProfileModel
@{
    ViewData["Title"] = "Edit Profile";
}

<style>
    body {
        background: url('/css/img/ClientBackGround.jpg') no-repeat center center fixed;
        background-size: cover;
        
    }

    .edit-profile-container {
        background: rgba(255, 255, 255, 0.9);
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
        text-align: center;
    }

    .form-control {
        border-radius: 10px;
    }

    .btn-primary {
        background-color: #d2691e;
        border: none;
        border-radius: 10px;
    }

        .btn-primary:hover {
            background-color: #a0522d;
        }
</style>

<div class="edit-profile-container">
    <h2 class="mb-4">Edit Profile</h2>
    <form method="post">
        <div class="form-group mb-3">
            <label class="form-label">Full Name</label>
            <input asp-for="Profile.FullName" class="form-control" placeholder="Enter your full name" />
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Profile.Email" class="form-control" placeholder="Enter your email" />
        </div>
        <button type="submit" class="btn btn-primary w-100">Save</button>
    </form>
</div>
