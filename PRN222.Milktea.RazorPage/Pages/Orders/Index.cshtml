@page
@model PRN222.Milktea.RazorPage.Pages.Orders.OrdersIndexModel

@{
    ViewData["Title"] = "Your Orders";
}

<style>
    body {
        background: url('/css/img/ClientBackGround.jpg') no-repeat center center fixed;
        background-size: cover;
        
    }

    .orders-container {
        background: rgba(255, 255, 255, 0.95);
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        max-width: 1000px;
        width: 100%;
        text-align: center;
    }

    table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

    th, td {
        padding: 12px;
        text-align: center;
        border: 1px solid #ddd;
    }

    th {
        background-color: #ff5733;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .status {
        font-weight: bold;
    }

    .btn-action {
        background-color: #ff5733;
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        color: white;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-action:hover {
            background-color: #cc4626;
        }

    .btn-cancel {
        background-color: #dc3545;
        padding: 8px 15px;
        border-radius: 5px;
        color: white;
        border: none;
        transition: 0.3s;
    }

        .btn-cancel:hover {
            background-color: #c82333;
        }
</style>

<div class="orders-container">
    <h2>Your Orders</h2>
    <table class="table" id="ordersTable">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Total</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr data-order-id="@order.OrderId">
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate</td>
                    <td>@order.TotalAmount</td>
                    <td class="status">@order.Status</td>
                    <td>
                        <a class="btn-action" asp-page="/Orders/OrderDetails" asp-route-orderId="@order.OrderId">Details</a>
                        @if (order.Status == "Pending")
                        {
                            <form method="post" asp-page-handler="Cancel" class="d-inline">
                                <input type="hidden" name="orderId" value="@order.OrderId" />
                                <button type="submit" class="btn-cancel">Cancel</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/signalr/5.0.11/signalr.min.js"></script>
    <script src="~/js/signalr-client.js"></script>
}
